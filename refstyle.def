%%-- TEMPLATE FOR EQUATIONS ---------------------
\newcommand*{\RSeqrefform}[1]{\textup{(\ref{#1})}}
\@ifpackageloaded{amsmath}%
   {\let\AMSeqref\eqref
    \let\eqref\relax}%
   {}
\newref{eq}{%
   name      = \RSeqtxt,
   names     = \RSeqstxt,
   Name      = \RSEqtxt,
   Names     = \RSEqstxt,
   refcmd    = \RSeqrefform{#1},
   rngtxt    = \RSrngtxt,
   lsttwotxt = \RSlsttwotxt,
   lsttxt    = \RSlsttxt}
\let\RSeqref\eqref
\let\eqref\relax
\AtBeginDocument{%
   \@ifpackageloaded{amsmath}%
      {\RS@ifundefined{AMSeqref}{\let\AMSeqref\eqref}{}%
       \let\RSeqrefform\AMSeqref}%
         {}%
     \let\eqref=\RSeqref
   }
   
